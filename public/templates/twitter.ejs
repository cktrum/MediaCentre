<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div class="list-group">
   			<div class="list-group-item">
      		<h4 class="list-group-item-heading">
      			Users
      		</h4>
   			</div>
   			<button ng-repeat="user in twitter.users" type="button" class="btn btn-link list-group-item" ng-click="showUser(user)">
      		<p class="list-group-item-text">
	        	{{user.name}}
	      	</p>
   			</button>
			</div>

			<div class="list-group-item">
      	<h4 class="list-group-item-heading">
      		Topics
      	</h4>
   		</div>
   		<button ng-repeat="topic in twitter.topics" type="button" class="btn btn-link list-group-item" ng-click="showTopic(topic)">
    		<p class="list-group-item-text">
        	{{topic.name}}
      	</p>
 			</button>
		</div>
		<div class="col-xs-9">
			<div ng-repeat="tweet in twitter.tweets">
				{{tweet.name}}
			</div>
		</div>
	</div>
</div>